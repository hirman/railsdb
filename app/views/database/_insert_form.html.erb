<% form_tag( {  :controller => :database,
                :action     => :insert,
                :id         => @database,
                :table      => @table.name } ) do -%>

<table class="form">
<thead>
<tr>
  <td colspan="8">Insert Data Into &quot;<%= @table.name %>&quot; Table</td>
</tr>
<tr class="label">
  <td>&nbsp;</td>
  <% @table.field_names.each do |n| -%>
  <% next if n == 'id' %>
  <td><%= h n %></td>
  <% end -%>
</tr>
</thead>
<tbody>
<%= render :partial => 'database/insert' %>
<tr id="blank_insert"<%= alt %>>
  <td class="c" colspan="<%= @table.field_names.size.succ %>">
    <%= link_to_remote 'Add Field',
                       :url => { :controller => :database,
                                 :action     => :blank_insert,
                                 :id         => @database,
                                 :table      => @table.name } %> |
    <%= link_to_remote 'Remove Field',
                       :url => { :controller => :database,
                                 :action     => :blank_remove,
                                 :id         => @database,
                                 :table      => @table.name } %>
  </td>
</tr>
</tbody>
<tfoot>
<tr>
  <td colspan="8"><input type="submit" name="submit" value="Submit"></td>
</tr>
</tfoot>
</table>

<% end -%>
