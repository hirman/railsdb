<h2><%= link_to 'Databases',
                :controller => 'home',
                :action     => 'databases' %> &#187;
<%= link_to "&quot;#{ h @database.name }&quot; Database",
            :controller => :database,
            :id         => @database %> &#187;
<%= link_to "&quot;#{ h @table.name }&quot; Table",
            :controller => :database,
            :action     => :browse,
            :table      => (h @table.name) %> &#187;
Edit Row &quot;<%= params[:pk] %>&quot;</h2>

<% form_tag do -%>

<%= hidden_field_tag 'row[id]', params[:pk] %>

<table class="form">
<thead>
<tr>
  <td colspan="2">Edit Row Form</td>
</tr>
</thead>
<tbody>
<%= render :partial => 'database/row_form' %>
</tbody>
<tfoot>
<tr>
  <td colspan="2"><input type="submit" name="submit" value="Submit"></td>
</tr>
</tfoot>
</table>

<% end -%>
