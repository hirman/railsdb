<% form_for :driver do |f| -%>

<table class="form">
<thead>  
<tr>
  <td colspan="2">Driver Form</td>
</tr>
</thead>
<tbody>
<tr<%= alt %>>
  <td>Name:</td>
  <td><%= f.text_field :name, :size => 18 %>
    <% if @driver.errors['name'] -%>
      <span class="error"><%= @driver.errors['name'] %></span>
    <% end -%></td>
</tr>
</tbody>
<tfoot>
<tr>
  <td colspan="2"><input type="submit" name="submit" value="Submit"></td>
</tr>
</tfoot>
</table>

<% end -%>
